
<div class="modal" id="item-form">
  <div class="modal-dialog modal-md">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      </div>
      <div class="modal-body">
        <%= form_tag items_path, method: :post, class: 'form-horizontal' do %>
          <div class="form-group">
            <div class="col-sm-12">
              <%= label_tag :name, 'Nome', class: 'col-xs-6' %>
              <%= text_field_tag :name, '', class: 'form-control', placeholder: 'Digite o nome do item', required: true %>
            </div>
            <div class="col-sm-12">
              <%= label_tag :name, 'Descrição', class: 'col-xs-6' %>
              <%= text_field_tag :description, '', class: 'form-control', placeholder: 'Descreva o ítem', required: true %>
            </div>
          </div>
          <%= submit_tag 'Salvar', class: 'btn btn-sm btn-primary pull-right' %>
        <% end %>
        <div class="clearfix"></div>
      </div>
    </div>
  </div>
</div>